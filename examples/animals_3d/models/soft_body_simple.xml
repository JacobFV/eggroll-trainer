<?xml version="1.0"?>
<!-- Simple soft body example -->
<mujoco model="soft_body">
  <option timestep="0.002" gravity="0 0 -9.81"/>
  
  <worldbody>
    <!-- Ground -->
    <geom name="ground" type="plane" size="10 10 0.1" rgba="0.5 0.5 0.5 1"/>
    
    <!-- Soft body using composite -->
    <composite type="ellipsoid" count="5 5 5" spacing="0.1 0.1 0.1" offset="0 0 1">
      <geom type="ellipsoid" size="0.05 0.05 0.05" rgba="0.8 0.3 0.3 1"
            solimp="0.9 0.95 0.001" solref="0.02 1"/>
    </composite>
    
    <!-- Rigid object for interaction -->
    <body name="rigid_box" pos="2 0 0.5">
      <geom type="box" size="0.3 0.3 0.3" rgba="0.3 0.3 0.8 1" mass="1.0"/>
    </body>
  </worldbody>
</mujoco>

