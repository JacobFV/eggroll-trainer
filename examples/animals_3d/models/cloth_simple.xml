<?xml version="1.0"?>
<!-- Simple cloth mesh example for MuJoCo -->
<mujoco model="cloth_simple">
  <option timestep="0.002" gravity="0 0 -9.81"/>
  
  <asset>
    <material name="cloth_mat" rgba="0.8 0.8 0.9 1"/>
  </asset>
  
  <worldbody>
    <!-- Ground -->
    <geom name="ground" type="plane" size="10 10 0.1" rgba="0.5 0.5 0.5 1"/>
    
    <!-- Simple cloth using composite (shell type for soft body) -->
    <composite type="shell" count="10 10" offset="0 0 1">
      <geom type="box" size="0.1 0.1 0.005" material="cloth_mat" 
            solimp="0.9 0.95 0.001" solref="0.02 1"/>
    </composite>
  </worldbody>
</mujoco>

